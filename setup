#!/usr/bin/env bash
set -exou pipefail

# python3 is installed by default in Ubuntu 20.04 LTS
pip3 install mypy
pip3 install black
pip3 install isort

sudo mkdir -p /usr/"$USER"
sudo cp py /usr/"$USER"
sudo chmod +x /usr/"$USER"/py
echo "export PATH=\"/usr/\$USER:\$PATH\"" >> ~/.profile
source ~/.profile
