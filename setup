#!/usr/bin/env bash
set -eou pipefail

sudo mkdir -p /usr/"$USER"
sudo cp ty /usr/"$USER"
sudo chmod +x /usr/"$USER"/ty
sudo cp parse-toml.py /usr/"$USER"
set +e
grep -q 'export PATH=\"/usr/\$USER:\$PATH\"' ~/.bash_profile
grep_return=$?
set -e
if [[ $grep_return == 1 ]]; then
    echo "export PATH=\"/usr/\$USER:\$PATH\"" >> ~/.bash_profile
fi
set +H
printf "🐍 success! restart terminal to use ty\n"
